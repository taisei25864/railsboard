<h1>スレッド一覧</h1>
<div class="home_link">
    <%= link_to 'スレッドを立てる', new_subject_path %>
</div>
<table>
    <tr>
        <th>クラス名</th>
        <th>教授名</th>
        <th>(作成・更新)日時</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
        <td><%= link_to subject.subject_name, subject_path(subject) %></td>
        <td><%= subject.teacher_name %></td>
        <td><%= subject.updated_at.in_time_zone('Tokyo') %></td>
        <td><%= link_to '編集', edit_subject_path(subject) %></td>
        <% if Time.now - subject.created_at > 172800 %>
            <% subject.destroy %>
        <% end %>
    </tr>
    <% end %>
</table>
